@model FODUN.Reservas.Models.Ubicacion

@{
    ViewData["Title"] = "Crear Ubicación";
}

<h1 class="mb-4"><i class="fas fa-plus-circle"></i> Crear Nueva Ubicación</h1>

<h4>Detalles de la Ubicación</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoUbicacion" class="control-label"></label>
                <input asp-for="TipoUbicacion" class="form-control" />
                <span asp-validation-for="TipoUbicacion" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Crear</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}