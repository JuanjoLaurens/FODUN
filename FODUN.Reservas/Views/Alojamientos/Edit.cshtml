@model FODUN.Reservas.Models.Alojamiento

@{
    ViewData["Title"] = "Editar Alojamiento";
}

<h1 class="mb-4"><i class="fas fa-edit"></i> Editar Alojamiento</h1>
<h4>Detalles del Alojamiento</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="AlojamientoId" />

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoAlojamiento" class="control-label"></label>
                <input asp-for="TipoAlojamiento" class="form-control" />
                <span asp-validation-for="TipoAlojamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadMaximaPersonas" class="control-label"></label>
                <input asp-for="CapacidadMaximaPersonas" class="form-control" />
                <span asp-validation-for="CapacidadMaximaPersonas" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UbicacionId" class="control-label"></label>
                <select asp-for="UbicacionId" class="form-control" asp-items="ViewBag.UbicacionId">
                    <option value="">-- Selecciona una Ubicación --</option>
                </select>
                <span asp-validation-for="UbicacionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CamasDobles" class="control-label"></label>
                <input asp-for="CamasDobles" class="form-control" />
                <span asp-validation-for="CamasDobles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CamasSencillas" class="control-label"></label>
                <input asp-for="CamasSencillas" class="form-control" />
                <span asp-validation-for="CamasSencillas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Camarotes" class="control-label"></label>
                <input asp-for="Camarotes" class="form-control" />
                <span asp-validation-for="Camarotes" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="TieneBanoPrivado" />
                <label class="form-check-label" asp-for="TieneBanoPrivado"></label>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="TieneNevera" />
                <label class="form-check-label" asp-for="TieneNevera"></label>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="TieneTelevisor" />
                <label class="form-check-label" asp-for="TieneTelevisor"></label>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="TieneCocinetaEquipada" />
                <label class="form-check-label" asp-for="TieneCocinetaEquipada"></label>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="TieneSalaEstar" />
                <label class="form-check-label" asp-for="TieneSalaEstar"></label>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="TieneTerraza" />
                <label class="form-check-label" asp-for="TieneTerraza"></label>
            </div>

            <div class="form-group">
                <label asp-for="TarifaDiaOrdinario" class="control-label"></label>
                <input asp-for="TarifaDiaOrdinario" class="form-control" value="@(Model.TarifaDiaOrdinario?.ToString("0") ?? "0")" />
                <span asp-validation-for="TarifaDiaOrdinario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TarifaDiaEspecial" class="control-label"></label>
                <input asp-for="TarifaDiaEspecial" class="form-control" value="@(Model.TarifaDiaEspecial?.ToString("0") ?? "0")" />
                <span asp-validation-for="TarifaDiaEspecial" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="Activo" />
                <label class="form-check-label" asp-for="Activo"></label>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}